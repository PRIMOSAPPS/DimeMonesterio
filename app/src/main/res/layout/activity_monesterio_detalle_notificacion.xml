<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detalleNotificacionDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left">

    <include layout="@layout/activity_detalle_notificacion" />

    <LinearLayout
        android:id="@+id/detalleNotificacionLinearLayoutMenuLateral"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/opcion_menu_lateral"
            android:src="@drawable/img_sup_menulateral" />

        <ListView
            android:id="@+id/listMenuLateral"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/opcion_menu_lateral"
            android:choiceMode="singleChoice"
            android:divider="@color/separador_menu_lateral"
            android:dividerHeight="2dp" />

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
